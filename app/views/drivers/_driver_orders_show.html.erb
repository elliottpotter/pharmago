  <div class="verification-code">
    <% if @driver.unverified? %>
    <h2 style="padding-bottom: 40px; color: grey;">Verify your account to access all the available orders. <br> We send you the code on your phone</h2>
    <%= render "shared/verification_code" %>
    <% else %>
    <% if @available_orders.length > 0 %>
    <h1 class="center"> All Currently Available orders </h1>
    <% @available_orders.each do |available_order| %>
    <div id="container-<%= available_order.id %>">
      <%= render "shared/order_card", order: available_order %>
    </div>
    <% end %>

    <% else %>

    <h1 class="center"> No orders currently available </h1>
    <% end %>
    <% end %>
  </div>

