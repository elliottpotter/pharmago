<div class="banner" style="background: linear-gradient(-225deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.2) 50%), url( <%= image_path('delivery.jpg') %> );">

  <div class="login test">
    <%= image_tag 'pharmago', id: 'logo'  %>
    <br>
    <br>
    <h4 style="font-size: 20px;">Order prescription drugs with <strong> one </strong>click</h4>
    <!-- <h4 style="padding-bottom: 10px;">Enter your email to get started</h4> -->
    <br>
    <div style="padding-left: 50px; padding-right: 50px;">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
      <% end %>

    </div>
    <div>
      <h5 style="line-height: 20px;">Haven't made your account yet? Click <%= render "devise/shared/links" %> </h5>
    </div>
  </div>
</div>
