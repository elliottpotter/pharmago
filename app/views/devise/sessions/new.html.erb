<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url( <%= image_path('doctor.jpg') %> );">
  <div class="login test">
    <h1 style="font-size: 50px;">Pharmago</h1>
    <h2>Order prescreption drugs with <strong> one </strong>click</h2>
    <h3 style="padding-bottom: 10px;">Welcome back!</h3>
    <div style="padding-left: 50px; padding-right: 50px;">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
      <% end %>

    </div>
    <div>
      <h5 style="line-height: 20px;">Haven't made your account yet? Click <%= render "devise/shared/links" %> </h5>
    </div>
  </div>
</div>
