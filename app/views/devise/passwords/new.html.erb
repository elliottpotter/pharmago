<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url( <%= image_path('doctor.jpg') %> );">
  <div class="login test">
    <h1 style="font-size: 50px;">Pharmago</h1>
    <h2>Forgot your password?</h2>
    <h3 style="padding-bottom: 10px;">Haha classic, happens to everybody. So what's your email to reset it?</h3>
    <div style="padding-left: 50px; padding-right: 50px;">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions" %>
  </div>
<% end %>


    </div>
    <div>
      <h5 style="line-height: 20px;">Just remembered it? Click <%= render "devise/shared/links" %> </h5>
    </div>
  </div>
</div>
