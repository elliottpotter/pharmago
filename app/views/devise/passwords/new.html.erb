<div class="banner" style="background: linear-gradient(-225deg, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.2) 50%), url( <%= image_path('doctor.jpg') %> );">

  <div class="login test">
    <%= image_tag 'pharmago', id: 'logo'  %>
    <br>
    <br>
    <h4>Forgot your password?</h4>
    <h5 style="padding-bottom: 10px;">Haha classic, happens to everybody. So what's your email to reset it?</h5>
    <div style="padding-left: 50px; padding-right: 50px;">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions" %>
  </div>
<% end %>


    </div>
    <div>
      <h5 style="line-height: 20px;">Just remembered it? Click <%= render "devise/shared/links" %> </h5>
    </div>
  </div>
</div>
