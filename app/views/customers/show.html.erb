<div class="dashboard-wrapper">
  <div class="row">
    <div class="tabs-container col-xs-3 col-xs-offset-1">
      <div class="tab active" data-target="#orders"> <!-- lav underDivs se instacart -->
        <h4>Orders</h4>
      </div>
      <div class="tab" data-target="#profile">
        <h4>Profile</h4>
      </div>
      <div class="tab" data-target="#History">
        <h4>History</h4>
      </div>
    </div>

    <div class="context-container col-xs-7 ">
        <div class="tab-content" id="orders">
          <%= render 'customer_orders_show.html.erb', orders: @orders, customer: @customer %>
        </div>
        <div class="tab-content hidden" id="profile">
          <%= render 'customer_profile_show.html.erb', customer: @customer %>
        </div>
        <div class="tab-content hidden" id="History">
          <%= render 'customer_history_show.html.erb', customer: @customer %>
        </div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>

<script>
  $(document).ready(function () {
    $(function(){

      $(".tab").on("click", function(e){
        // Change active tab
        $('.tab').removeClass('active')
        $(this).addClass('active')

        // Hide all tab-content (use class="hidden")
        $('.tab-content').addClass('hidden')

        // Show target tab-content (use class="hidden")
        var id = $(".active").data("target")
        $(id).removeClass('hidden')
      });
    });
  });
</script>
<% end %>
