<% @orders.where(aasm_state: 'delivered').each do |order| %>

<div class="">
    <h5> Order-id: <%= order.id  %> </h5>
    <h5> Order -  status: <%= order.aasm_state %> </h5>
    <h5> delivery date: <%= order.delivery_date %> </h5>
