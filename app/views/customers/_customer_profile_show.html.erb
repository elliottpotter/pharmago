
<div style="background-color: white; color: grey;">
  <h3>Account Information</h3>
  <div class="row">
    <div class="col-xs-4"><h4> Email </h4></div>
    <div class="col-xs-4"><h4> <%= customer.user.email %></h4></div>
    <div class="col-xs-4"><h4>Update </h4></div>
  </div>
  <div class="row">
    <div class="col-xs-4"><h4> Password </h4></div>
    <div class="col-xs-4"><h4> ●●●●●●</h4></div>
    <div class="col-xs-4"><h4><%= link_to "Change", edit_user_registration_path %></h4></div>
  </div>
</div>

<div style="background-color: white; color: grey; margin-top: 30px;">
  <h3>Personal Infomation</h3>
  <div class="row">
    <div class="col-xs-4"><h4> First Name </h4></div>
    <div class="col-xs-4"><h4> <%= customer.user.first_name %></h4></div>
    <div class="col-xs-4"><h4>Update </h4></div>
  </div>
  <div class="row">
    <div class="col-xs-4"><h4> Last Name </h4></div>
    <div class="col-xs-4"><h4> <%= customer.user.last_name %> </h4></div>
    <div class="col-xs-4"><h4>Update </h4></div>
  </div>
  <div class="row">
    <div class="col-xs-4"><h4> Phone Number </h4></div>
    <div class="col-xs-4"><h4> <%= current_user.customer.phone_number %> </h4></div>
    <div class="col-xs-4"><% if current_user.customer.phone_number.nil? %>
      <h4>Add</h4>

      <% else %>
      <h4>Update</h4>
      <% end %>


    </div>
  </div>
  <div class="row">
    <div class="col-xs-4"><h4> Customer ID </h4></div>
    <div class="col-xs-4"><h4> <%= customer.id %></h4></div>
    <div class="col-xs-4"><h4> </h4></div>
  </div>
</div>



